<% @page_title = "お会計情報の変更" %>

<h1><%= @page_title %></h1>

<p><%= link_to "お会計詳細に戻る", @receipt %></p>

<div class="row">

  <%= form_for @receipt do |form| %>

    <%= render "form", form: form %>

    <p><%= button_tag '変更', class: "btn waves-effect waves-light btn", type: "button", onclick: "submit();" %></p>

  <% end %>

</div>
