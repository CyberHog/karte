<%  @page_title = "診察券一覧" %>
<h1><%=  @page_title %></h1>

<p><%= link_to "アカウント詳細へ戻る", @user %></p>
<p><%= link_to "新規作成", new_user_clinic_card_url(@user, @clinic_card), class: "btn waves-effect waves-light btn blue" %></p>

<% if @user.held_cards.present? %>

<div class="row">
<div class="col s9">

<ul class="collection hoverable">

  <% @user.clinic_cards.each do |clinic_card| %>
    <li class="collection-item avatar">
      <%= image_tag clinic_card.publisher.avatar.url, class: "circle" %>
      <p>
       <%= clinic_card.publisher.name %><br>
       <%= link_to clinic_card.number, user_clinic_card_url(id: cinic_card.id) %>
      </p>
      <span class="title"><%= clnic_card.holding_point %></span>
    </li>
  <% end %>

</ul>

</div>
</div>

<% else %>
<p>現在診察券を保有していません。</p>
<% end %>
