<%  @page_title = "メニュー一覧" %>
<h1><%=  @page_title %></h1>

<div class="row">
<div class="col s8">
<%= form_tag :search_user_menus, method: :get do %>
  <p><%= text_field_tag "q", params[:q] %>
  <%= button_tag "検索", class: "btn waves-effect waves-light", type: "button", onclick: "submit();" %></p>
<% end %>

</div>
</div>


<% if @user.menus.present? %>
<table class="highlight">
  <tr>
    <th>コースID</th>
    <th>コース名</th>
    <th>価格</th>
    <th>ポイント</th>
  </tr>
  <% @menus.each do |menu| %>
  <% if menu.user_id == @user.id %>
  <tr>
    <td><%= menu.content_id %></td>
    <td><%= link_to menu.content_name, user_menu_url(id: menu.id) %></td>
    <td><%= menu.price %></td>
    <td><%= menu.attached_point %></td>
  </tr>
  <% end %>
  <% end %>
</table>
<% else %>
<p>メニュー情報がありません。</p>
<% end %>
