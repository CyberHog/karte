<%  @page_title = "お会計管理" %>
<h1><%=  @page_title %></h1>

<p><%= current_user.clinic.name %> >> <%= @user.full_name %></p>

<p><%= link_to "お会計登録", new_user_patients_receipt_url(@user, @patients_receipt), class: "waves-effect waves-light btn blue" %></p>

<% if @user.received_receipts.present? %>
<table class="highlight">
  <% @patients_receipts.each do |patients_receipt| %>
  <% if patients_receipt.buyer.id == @user.id %>
  <tr>
    <th>支払日</th>
    <th>氏名</th>
    <th>サービス名</th>
    <th>取得ポイント</th>
    <th>支払金額</th>
    <th>支払方法</th>
  </tr>
  <tr>
    <td><%= link_to patients_receipt.payday, user_patients_receipt_url(id: patients_receipt.id) %></td>
    <td><%= patients_receipt.payer %></td>
   <% second_repeat = false %>
   <% patients_receipt.receipts.each do |receipt| %>
   <% if second_repeat %>
     <td></td><td></td>
   <% else %>
     <% second_repeat = true %>
   <% end %>
    <td><%= receipt.service %></td>
    <td style= "text-align: right"><%= receipt.gained_point %></td>
    <td style= "text-align: right"><%= receipt.payment %></td>
    <td><%= receipt.payment_method %></td>
    <% end %>
  </tr>
  <% end %>
  <% end %>
</table>
<% else %>
<p>お会計情報がありません。</p>
<% end %>
