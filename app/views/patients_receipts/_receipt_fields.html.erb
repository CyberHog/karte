<tr class="nested-fields" width="1200px">
    <td width="240px">
      <%= f.select :service, @menu_name, {include_blank: "選択して下さい"}, id: "receipt_service" %>
    </td>
    <td width="240px">
      <%= javascript_tag do %>
        point = <%= @menu_point %>;
      <% end %>
      <%= f.text_field :gained_point, id: "receipt_point", class: "right-align" %>
    </td>
    <td width="240px">
      <%= javascript_tag do %>
        payment = <%= @menu_price %>;
      <% end %>
    <%= f.text_field :payment, id: "receipt_payment", class: "right-align" %>
    </td>
    <td width="240px">
      <%= f.select :payment_method, Receipt.payment_methods.keys %>
    </td>
    <td width="240px">
      <%= link_to_remove_association '-', f, class: "btn waves-effect waves-light red hoverable" %>
    </td>
</tr>
