<%  @page_title = "お会計の詳細" %>

<h1><%=  @page_title %></h1>

<div class="row">

<p><%= link_to "お会計一覧", user_patients_receipts_url %> | <%= link_to "編集", edit_user_patients_receipt_url %> | <%= link_to "削除", user_patients_receipt_url(@user, @patients_receipt), method: :delete,
      data: { confirm: "本当に削除しますか?" } %></p>

<table class="highlight">

  <%= @patients_receipt.id %>
  <tr>
    <th>支払日</th>
    <th>氏名</th>
    <th>サービス名</th>
    <th>取得ポイント</th>
    <th>支払金額</th>
    <th>支払方法</th>
  </tr>
  <tr>
    <td><%= @patients_receipt.payday %></td>
    <td><%= @patients_receipt.payer %></td>
  <% second_repeat = false %>
  <% @patients_receipt.receipts.each do |receipt| %>
  <% if second_repeat %>
    <td></td><td></td>
  <% else %>
    <% second_repeat = true %>
  <% end %>
    <td><%= receipt.service %></td>
    <td><%= receipt.gained_point %></td>
    <td><%= receipt.payment %></td>
    <td><%= receipt.payment_method %></td>
  </tr>
  <% end %>
</table>

</div>
