<%  @page_title = "お会計詳細" %>
<h1><%=  @page_title %></h1>

<p><%= link_to "会計一覧", :receipts %> | <%= link_to "編集", [:edit, @receipt] %></p>

<table class="highlight">
  <tr>
    <th>支払日</th>
    <td><%= @receipt.payday.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>サービス名</th>
    <td><%= @receipt.service %></td>
  </tr>
  <tr>
    <th>支払金額</th>
    <td><%= @receipt.payment %></td>
  </tr>
  <tr>
    <th>取得ポイント</th>
    <td><%= @receipt.gained_point %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @receipt.payment_method %></td>
  </tr>
</table>
