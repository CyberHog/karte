<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">

<div class="input-field col s12">
  <i class="material-icons prefix">email</i>
    <%= f.text_field :email, id: "icon_email", class: "validate", autofocus: true, autocomplete: "email" %>
    <label for="icon_email">メールアドレスまたはユーザーID</label>
</div>

<div class="input-field col s12">
  <i class="material-icons prefix">vpn_key</i>
    <%= f.password_field :password, id: "password", class: "validate", autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  <label for="password">パスワード</label>
</div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <%= button_tag 'ログイン', class: "btn waves-effect waves-light btn", type: "button", onclick: "submit();" %>
<% end %>

</div>

<%= render "devise/shared/links" %>
