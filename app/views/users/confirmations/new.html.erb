<h2>アカウント確認メールを再送</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

<div class="row">

  <div class="input-field col s12">
    <i class="material-icons prefix">email</i>
      <%= f.email_field :email, id: "icon_email", class: "validate", autofocus: true, autocomplete: "email" %>
      <label for="icon_email">メールアドレス</label>
  </div>

  <%= button_tag 'アカウント確認メールを再送', class: "btn waves-effect waves-light btn", type: "button", onclick: "submit();" %>

<% end %>

</div>

<%= render "devise/shared/links" %>
