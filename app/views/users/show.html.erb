<%  @page_title = "アカウント詳細" %>

<h1><%=  @page_title %></h1>

<div class="row">
  <div class="col s12">
<%= link_to "患者一覧", users_url %> >> アカウント詳細
  <% if current_user && (@user.id == current_user.id) %>
      >> <%= link_to "アカウント編集", edit_user_registration_path %></div></div>
  <% else %>
</div></div>
  <% end %>

<% unless @user.id == current_user.id %>
  <% unless @user.practice? %>
    <% unless @user.held_cards.present? %>
    <div class="row">
    <div class="col s12">
     <%= link_to "診察券作成", new_user_clinic_card_url(@user, @clinic_card), class: "btn waves-effect waves-light blue" %></div></div>
    <% else %>
    <div class="row">
    <div class="col s12">
      <%= link_to "診察券一覧", user_clinic_cards_url(@user) %></div></div>
    <% end %>
  <% end %>
<% end %>

  <div class="row">
    <div class="col s12">
      <% if (@user == current_user) && (@user.practice?) %>
        <% unless @user.clinic.present? %>
          <p><%= link_to "クリニック登録", new_user_clinic_url(@user), class: "btn waves-effect waves-light blue" %></p>
        <% else %>
          <%= link_to "クリニック情報の編集", edit_user_clinic_url(@user), class: "btn waves-effect waves-light blue" %></p>
        <% end %>
      <% end %>
    </div>
  </div>

<%= render "body" %>

<%= render "stats" %>

<% unless @user.id == current_user.id %>
<%= render "follow_form" if user_signed_in? %>
<% end %>
