<table class="highlight">
  <tr>
    <th width="190">画像</th>
    <td><%= image_tag @user.avatar.url %></td>
  </tr>
  <tr>
    <th>ユーザーネーム</th>
    <td><%= @user.user_name %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @user.full_name %></td>
  </tr>
  <tr>
    <th>電話</th>
    <td><%= @user.phone %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>生年月日</th>
    <td><%= @user.birthday.try(:strftime, "%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= @user.gender == 0 ? "男" : "女" %></td>
  </tr>
  <tr>
    <th>所属</th>
    <td><%= @user.business? ? "ビジネスユーザー" : "個人ユーザー" %></td>
  </tr>
</table>
