<%  @page_title = "マイクリニックリスト" %>
<h1><%=  @page_title %></h1>

<%= form_tag :search_users, method: :get do %>
  <p><%= text_field_tag "q", params[:q] %>
  <%= button_tag '検索', class: "btn waves-effect waves-light btn", type: "button", onclick: "submit();" %></p>
<% end %>

<% if @clinics.present? %>
<%= paginate @clinics %>

<% @clinics.each do |clinic| %>

<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <img src="images/sample-1.jpg">
        <span class="card-title"><%= clinic.name %></span>
      </div>
      <div class="card-content">
        <p>I am a very simple card. I am good at containing small bits of information.
        I am convenient because I require little markup to use effectively.</p>
      </div>
      <div class="card-action">
        <a href="<%= clinic.hp_url %>"><%= clinic.hp_url %></a>
      </div>
    </div>
  </div>
</div>

  <% end %>
</table>
<%= paginate @clinics %>
<% else %>
<p>マイクリニックがありません。</p>
<% end %>
