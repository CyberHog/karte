<%  @page_title = "マイクリニックリスト" %>
<h1><%=  @page_title %></h1>

<div class="row">
<div class="col s9">
<%= form_tag :search_users, method: :get do %>
  <p><%= text_field_tag "q", params[:q] %>
  <%= button_tag '検索', class: "btn waves-effect waves-light btn", type: "button", onclick: "submit();" %></p>
<% end %>
</div>
</div>

<% if @users.present? %>
<%= paginate @users %>

<div class="row">
<div class="col s9">

<ul class="collection hoverable">

<% @users.each do |user| %>
<% unless user.id == current_user.id %>
  <li class="collection-item avatar">
    <%= image_tag user.avatar.url, class: "circle" %>
    <p>カルテ番号<br>
       <%= user.id %>
    </p>
    <span class="title"><%= link_to user.full_name, user %></span>
    <p class="secondary-content">
        <%= link_to "削除", user, method: :delete,
          data: { confirm: "本当に削除しますか?" } %>
    </p>
  </li>

<% end %>
<% end %>

</ul>

</div>
</div>

<%= paginate @users %>
<% else %>
<p>マイクリニックがありません。</p>
<% end %>
