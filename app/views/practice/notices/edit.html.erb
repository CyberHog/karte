<% @page_title = "お知らせの編集"%>
<h1><%= @page_title %></h1>

<div class="row">
<div class="col s9">

<p><%= link_to "記事の表示に戻る", practice_user_notice_path(@user, @notice) %></p>

<%= form_for [:practice, @user, @notice] do |form| %>
<%= render "form", form: form %>
<p><%= button_tag '投稿する', class: "btn waves-effect waves-light btn", type: "button", onclick: "submit();" %></p>
<% end %>

</div>
</div>
