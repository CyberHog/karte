<%  @page_title = "診察券詳細" %>

<h1><%=  @page_title %></h1>

<div class="row">

  <div class="row">
    <div class="col s12">
  <%= link_to "患者一覧", practice_users_url %> >> <%= link_to "アカウント詳細", practice_user_path(@user) %> >> 診察券詳細
    </div>
  </div>


<% if @clinic_card.publisher_id == current_user.id %>
<p>
  <%= link_to "編集", edit_practice_user_clinic_card_path %>
</p>
<% end %>
<p>
  <%= link_to "削除", practice_user_clinic_card_url(@user, @clinic_card), class: "btn waves-effect waves-light red", method: :delete,
  data: { confirm: "本当に削除しますか?" } %>
</p>


<table class="highlight">

  <tr>
    <th>治療院名</th>
    <td><%= @clinic_card.publisher.clinic.name %></td>
  </tr>
  <tr>
    <th>診察券番号</th>
    <td><%= @clinic_card.number %></td>
  </tr>
  <tr>
    <th>保有ポイント</th>
    <td><%= @clinic_card.holding_point %></td>
  </tr>
  <tr>
    <th>最終来院日</th>
    <td>
      <%= @payday %>
    </td>
  </tr>
</table>

</div>
