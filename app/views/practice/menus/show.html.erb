<%  @page_title = "メニューの詳細" %>

<h1><%=  @page_title %></h1>

<div class="row">

<p><%= link_to "メニュー一覧", practice_user_menus_url %> | <%= link_to "編集", edit_practice_user_menu_url %></p>

<p><%= link_to "削除", practice_user_menu_url(@user, @menu), class: "btn waves-effect waves-light red", method: :delete,
      data: { confirm: "本当に削除しますか?" } %></p>

<table class="highlight">
  <tr>
    <th width="150px">ID</th>
    <td><%= @menu.content_id %></td>
  </tr>
  <tr>
    <th>コース名</th>
    <td><%= @menu.content_name %></td>
  </tr>
  <% if @menu.coupon %>
  <tr>
    <th>使用可能回数</th>
    <td><%= @menu.counting %>回</td>
  </tr>
  <tr>
    <th>有効期間</th>
    <td><%= @menu.validity_period %>日間</td>
  </tr>
  <% end %>
  <tr>
    <th>価格</th>
    <td><%= @menu.price %></td>
  </tr>
  <tr>
    <th>付与ポイント</th>
    <td><%= @menu.attached_point %></td>
  </tr>
</table>

</div>
