<%  @page_title = "クーポンの詳細" %>

<h1><%=  @page_title %></h1>

<div class="row">

<p><%= link_to "クーポン一覧", practice_user_coupons_url %> | <%= link_to "編集", edit_practice_user_coupon_url %></p>
<p>
  <%= link_to "削除", [:practice, @user, @coupon], class: "btn waves-effect waves-light red", method: :delete,
  data: { confirm: "本当に削除しますか?" } %>
</p>

<table class="highlight">
  <tr>
    <th width="150px">クーポン名</th>
    <td><%= @coupon.coupon_name %></td>
  </tr>
  <tr>
    <th>残り回数</th>
    <td><%= @coupon.remaining %></td>
  </tr>
  <tr>
    <th>有効期限</th>
    <td>
      <% if @coupon.expiration_date.present? %>
        <%= simple_time(@coupon.expiration_date) %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>残り日数</th>
    <td><%= @coupon_life %>日</td>
  </tr>
</table>

</div>
