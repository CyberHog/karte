<%= render "shared/errors", obj: @coupon %>

<p>
  <% if current_user.clinic.present? %>
    <%= current_user.clinic.name %>
  <% else %>
    <%= current_user.full_name %>
  <% end %>
    >> <%= @user.full_name %></p>

<%= form.hidden_field :seller_id, value: current_user.id %>
<%= form.hidden_field :buyer_id, value: @user.id %>
<% if @patients_receipt.present? %>
  <%= form.hidden_field :patients_receipt_id, value: @patients_receipt.id %>
<% end %>
<%= form.hidden_field :menu_id, value: @menu_id %>

<%= @menu %>

<table class="highlight">
  <tr>
    <th><%= form.label :coupon_name %></th>
    <td>
      <% if @patients_receipt.present? %>
        <%= form.text_field :coupon_name, value: @course %>
      <% else %>
        <%= form.text_field :coupon_name, value: @course_c %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= form.label :remaining %></th>
    <td>
      <% if @patients_receipt.present? %>
        <%= form.text_field :remaining, value: @remaining %>
      <% else %>
        <%= form.text_field :remaining, value: @remaining_c %>
       <% end %>
    </td>
  </tr>
  <tr>
    <th><%= form.label :expiration_date %></th>
    <td><%= form.date_field :expiration_date %>残り<%= @coupon_life %>日
    </td>
  </tr>
</table>

<div class="col s2">
  <%= form.submit class: "btn waves-effect waves-light btn" %>
</div>
