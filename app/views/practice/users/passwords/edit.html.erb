<h2>パスワード変更</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="input-field col s12">
    <i class="material-icons prefix">vpn_key</i>
      <%= f.password_field :password, id: "password", class: "validate", autocomplete: "off" %>
      <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
      <label for="password">新しいパスワード</label>
  </div>

  <div class="input-field col s12">
    <i class="material-icons prefix">vpn_key</i>
      <%= f.password_field :password_confirmation, id: "password", class: "validate", autocomplete: "off" %>
      <label for="password">確認用パスワード</label>
  </div>

<%= button_tag 'パスワード変更', class: "btn waves-effect waves-light btn", type: "button", onclick: "submit();" %>
<% end %>

<%= render "devise/shared/links" %>
