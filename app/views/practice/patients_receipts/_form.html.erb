<%= form_for [@user, @patients_receipt] do |f| %>
...
  <table class="table table-striped table-bordered table-hover highlight">
    <tbody>
      <%= f.hidden_field :clinic_card_id, value: @user.clnic_card.id %>
      <%= f.hidden_field :seller_id, value: current_user.id %>
      <%= f.hidden_field :buyer_id, value: @user.id %>
      <tr>
         <th width="240px">支払日</th>
         <th width="240px">氏名</th>
      </tr>
      <tr>
        <td width="240px"><%= f.date_field :payday, class: 'form-control' %></td>
        <td width="240px"><%= f.text_field :payer, value: @user.full_name, class: 'form-control' %></td>
      </tr>
      <tr width="1200px">
         <th width="240px">サービス名</th>
         <th width="240px">取得ポイント</th>
         <th width="240px">支払金額</th>
         <th width="240px">支払方法</th>
         <th width="240px">操作</th>
      </tr>
      <%= f.fields_for :receipts do |q| %>

        <%= render "receipt_fields", f: q %>

      <% end %>
    </tbody>
  </table>
      <div class="links col s10">
      <%= link_to_add_association '+', f, :receipts, class: "btn waves-effect waves-light green hoverable" %>
      </div>
      <div class="col s2">
      <%= f.submit class: "btn waves-effect waves-light btn" %>
      </div>

<% end %>
